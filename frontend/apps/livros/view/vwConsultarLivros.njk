{% extends "templates/base.html" %}
{% block content %}
<br>
    <div class="container-fluid px-4">
        <ol class="breadcrumb mb-4 mt-4">
            <li class="breadcrumb-item">
                <a href="/">Menu Principal</a>
            </li>
            <li class="breadcrumb-item active">Consulta de Livros</li>
        </ol>
        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <h1 class="h3 mb-0 text-info">
                    <i class="fas fa-search me-2"></i>
                    {{ title }}
                </h1>
            </div>
            <div class="col-md-4 text-end">
                <a href="/livros/ManutLivro" class="btn btn-danger">
                    <i class="fas fa-plus me-1"></i>
                    Cadastrar Novo Livro
                </a>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-8">
                        <input
                            type="text"
                            id="searchInput"
                            class="form-control"
                            placeholder="Pesquisar por TÃ­tulo, Autor ou Data de PublicaÃ§Ã£o..."
                            onkeyup="filterTable()"></div>
                        <div class="col-12 col-md-4 d-grid">
                            <button class="btn btn-info" disabled>
                                <i class="fas fa-filter me-1"></i>
                                Aplicar Filtro</button>
                        </div>
                    </div>
                    {% if erro %}
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Erro ao carregar dados: {{ erro }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered w-100" id="livrosTable">
                            <thead class="bg-light text-dark">
                                <tr>
                                    <th style="width: 5%;">ID</th>
                                    <th style="width: 35%;">TÃ­tulo</th>
                                    <th style="width: 25%;">Autor</th>
                                    <th style="width: 15%;">PublicaÃ§Ã£o</th>
                                    <th style="width: 10%;">Custo</th>
                                    <th class="text-center" style="width: 10%;">AÃ§Ãµes</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if data %}
                                    {% for livro in data %}
                                        <tr>
                                            <td class="fw-bold">{{ livro.id }}</td>
                                            <td class="fw-bold">{{ livro.titulo }}</td>
                                            <td>{{ livro.nomeAutor }}</td>
                                            <td>{{ livro.dataPublicacao }}</td>
                                            <td>R$ {{ livro.edicaoCusto | number_format(2, ',', '.') }}</td>
                                            <td class="text-center">
                                                <a href="/livros/ManutLivro?id={{ livro.id }}" title="Editar/Visualizar" class="btn btn-sm btn-info">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Nenhum livro cadastrado ou erro ao carregar os dados.</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <script>
            // ðŸ›‘ JavaScript para o Mecanismo de Busca (Filtro da Tabela) ðŸ›‘
            function filterTable() {
                const input = document.getElementById('searchInput');
                const filter = input.value.toUpperCase();
                const table = document.getElementById('livrosTable');
                const tr = table.getElementsByTagName('tr');
                // Itera sobre todas as linhas da tabela (comeÃ§ando apÃ³s o cabeÃ§alho)
                for (let i = 1; i < tr.length; i++) {
                    tr[i].style.display = "none";
                    // Esconde a linha por padrÃ£o
                    // CÃ©lulas de TÃ­tulo (1), Autor (2), PublicaÃ§Ã£o (3)
                    const tdTitulo = tr[i].getElementsByTagName("td")[1];
                    const tdAutor = tr[i].getElementsByTagName("td")[2];
                    const tdPublicacao = tr[i].getElementsByTagName("td")[3];
                    if (tdTitulo || tdAutor || tdPublicacao) {
                        const tituloMatch = tdTitulo && tdTitulo
                            .textContent
                            .toUpperCase()
                            .indexOf(filter) > -1;
                        const autorMatch = tdAutor && tdAutor
                            .textContent
                            .toUpperCase()
                            .indexOf(filter) > -1;
                        const publicacaoMatch = tdPublicacao && tdPublicacao
                            .textContent
                            .toUpperCase()
                            .indexOf(filter) > -1;
                        if (tituloMatch || autorMatch || publicacaoMatch) {
                            tr[i].style.display = ""; // Mostra a linha
                        }
                    }
                }
            }
            window.onload = function () {
                if (typeof windowOnLoad === 'function') {
                    windowOnLoad();
                }
            };
        </script>
    {% endblock %}